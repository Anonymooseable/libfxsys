import os
Import('env')

files = [ 'allclr', 'areaclr', 'areareverse', 'getdisp', 'putdisp',
'putdisparea', 'setpoint', 'getpoint', 'writegraph', 'readarea', 'drawline',
'clearline', 'savedisp', 'restoredisp' ]

objects = []

for curfile in files:
	# change to the proper file extension
	if os.path.isfile(curfile+'.S'):
		curfileext = curfile + '.S'
	else:
		curfileext = curfile + '$CFILESUFFIX'
	
	o = env.Object('#/objects/' + curfile + '.o', curfileext);
	objects.append(o)
	
Return('objects')
